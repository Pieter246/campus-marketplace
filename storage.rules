// Firebase Storage Security Rules
// These rules should be deployed to Firebase Storage

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read all images
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Item photos - users can upload to their own items
    match /items/{itemId}/{fileName} {
      allow write: if request.auth != null 
        && isValidImage()
        && isOwnerOfItem(itemId);
      allow delete: if request.auth != null 
        && isOwnerOfItem(itemId);
    }
    
    // Profile pictures - users can upload their own
    match /profiles/{userId}/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && isValidImage();
      allow delete: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Helper functions
    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    function isOwnerOfItem(itemId) {
      // This would need to be verified against Firestore
      // For now, allow any authenticated user
      // In production, you'd want to check the item ownership
      return request.auth != null;
    }
  }
}
